# Django 核心设置
DJANGO_SECRET_KEY=your-strong-secret-key-here
DJANGO_DEBUG=True
DJANGO_TRUSTED_ORIGINS=http://localhost,https://127.0.0.1:6015
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost,https://127.0.0.1:6015,http://localhost:6015

# 数据库配置 (SQLite 默认)
# 使用 PostgreSQL 或 MySQL 时取消注释并配置
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=appstore_db
# DB_USER=appstore_user
# DB_PASSWORD=strong-password-here
# DB_HOST=localhost
# DB_PORT=5432

# GitHub OAuth 配置
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://127.0.0.1:8000/github-callback/

# 可选：应用存储路径
# APP_STORAGE_PATH=/path/to/custom/storage

# 国际化设置 (可选)
# DJANGO_LANGUAGE_CODE=zh-hans
# DJANGO_TIME_ZONE=Asia/Shanghai